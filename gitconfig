[core]
	excludesfile = $HOME/.gitignore_global
	autocrlf = input
	safecrlf = false

[push]
	default = simple
	autoSetupRemote = true
[branch]
	autosetuprebase = always
[alias]
	lg = log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit

